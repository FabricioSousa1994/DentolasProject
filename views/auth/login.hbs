<h1>Login</h1>

<form action="/login" method="post">

    <label>
        Username
        <input type="username" name="username">
    </label>

    <label>
        Password
        <input type="password" name="password" placeholder="*******">
    </label>

    <button type="submit">Login</button>

</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}