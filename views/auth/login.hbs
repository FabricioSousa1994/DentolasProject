<h1>Login</h1>

<form action="/login" method="post">

    <label>
        Email
        <input type="email" name="email" placeholder="you@hotmail.com">
    </label>

    <label>
        Password
        <input type="password" name="password" placeholder="*******">
    </label>

    <button type="submit">Login</button>

</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}