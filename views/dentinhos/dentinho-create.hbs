<h1 class="create">Create a new Dentinho</h1>

<form
  class="row g-3"
  action="/dentinhos/create"
  method="post"
  enctype="multipart/form-data"
>
  <div class="col-md-4">
    <label for="validationDefault01" class="form-label">Dentinho Name</label>
    <input
      type="text"
      name="name"
      class="form-control"
      id="validationDefault01"
      required
    />
  </div>

  <div class="col-md-4">
    <label for="validationDefault01" class="form-label">Picture</label>
    <input
      type="file"
      class="form-control"
      id="validationDefault01"
      name="picture_url"
      required
    />
  </div>

  <div class="col-12">
    <button class="btn btn-primary" type="submit">Create Dentinho!</button>
  </div>

</form>