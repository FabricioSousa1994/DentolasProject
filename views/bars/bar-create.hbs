<h1>Add a new bar</h1>

<form action="/bars/create" method="post" enctype="multipart/form-data">
    <label>
        Name
        <input type="text" name="name">
    </label>

    <label>
        Opening Hours
        <input type="text" name="opening-hours">
    </label>

    <label>
        Address
        <input type="text" name="address">
    </label>

    <label>
        Picture
       <input type="file" name="picture_url">
    </label>

<p>Dentinhos available:</p>

{{#each dentinho}}
    <label>
        {{name}}
        <input type="checkbox" value="{{_id}}">
    </label>
{{/each}}

<button type="submit">Create</button>
</form>



      
