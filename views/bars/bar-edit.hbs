<div class="card mb-3">
  <img src="https://res.cloudinary.com/duy4rj4hd/image/upload/v1672792109/Avalon-best-bar_xlgnbc.jpg" class="card-img-top" alt="pubImg">
  <div class="card-body">
    <h4 class="card-title-create">Edit a bar</h4>
    <form class="bar-create-form" action="/bars/{{bar._id}}/edit" method="post">
    
    
    <div class="create-labels">
    <label for="validationDefault01" class="form-label">Bar Name</label>
    <input type="text" class="form-control" name="name" id="validationDefault01" required>
  </div>

    <div class="create-labels">
    <label for="validationDefault01" class="form-label">Opening Hours</label>
    <input type="text" class="form-control" name="opening_hours" id="validationDefault01" required>
  </div>

    <div class="create-labels">
    <label for="validationDefault01" class="form-label">Address</label>
    <input type="text" class="form-control" name="address" id="validationDefault01" required>
  </div>


  <div class="create-labels">
    <label for="validationDefault01" class="form-label">Picture</label>
    <input type="text" class="form-control" id="validationDefault01" name="picture_url" required>
  </div>

<br>

<div>
    <h6>Choose the available dentinho:</h6>
  {{#each dentinho}}
    <label>
        {{name}}
        <input type="checkbox" name="dentinho" value="{{_id}}">
    </label>
{{/each}}
</select>
</div>


<div class="create-btn">
    <button class="btn btn-primary" type="submit">Edit</button>
</div>
</form>
</div>
</div>











