<h2>List of Bars</h2>

<form action="/bars/bar-search" method="get">
    <label> Search
        <input type="text" name="barName">
        <button type="submit">Search for a bar</button>
    </label>
</form>

<form action="/dentinho-search" method="get">
    <label> Search
        <input type="text" name="dentinhoName">
        <button type="submit">Search for dentinho</button>
    </label>
</form>

{{#each bars}}
<div>
    <p>Name:{{name}}</p>
    <p>Dentinho: {{#each dentinho}} {{name}}, {{/each}}</p>

    <img src="{{picture_url}}" alt="">
    <a href="/bars/{{_id}}">See details</a>
</div>
{{/each}}

