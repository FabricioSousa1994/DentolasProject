<h2>List of Bars</h2>

<form action="/bars/bar-search" method="get">
  <label>
    Search
    <input type="text" name="barName" />
    <button type="submit">Search for a bar</button>
  </label>
</form>

<form action="/dentinho-search" method="get">
  <label>
    Search
    <input type="text" name="dentinhoName" />
    <button type="submit">Search for dentinho</button>
  </label>
</form>

<div class="container">
    <div class="row row-cols-4">
  {{#each bars}}
    <div class="card" style="width: 300px;">
      <img src="{{picture_url}}" class="card-img-top" alt="{{name}}" />
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">Dentinho:
          {{#each dentinho}} {{name}}, {{/each}}</p>
        <a href="/bars/{{_id}}" class="btn btn-primary">See details</a>
      </div>
    </div>
  {{/each}}
</div>
</div>