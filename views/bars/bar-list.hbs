    <label>
    <input type="text" name="barName" placeholder="Search"/>
    <button type="submit" class="btn btn-primary mb-3">Search for a bar</button>
  </label>
  </div>-->
</form>


<form action="/dentinho-search" method="get">
<div class="input-group mb-3">
  <input type="text" class="form-control" name="dentinhoName" placeholder="Search">
  <button class="input-group-text" id="basic-addon2">Search for dentinho</button>
</div>

 <!-- <label>
    <input class="form-control me-2" type="text" name="dentinhoName" placeholder="Search"/>
    <button type="submit" class="btn btn-primary mb-3">Search for dentinho</button>
  </label>-->


</form>
</div>

<div class="container ">
    <div class="row row-cols-4">
  {{#each bars}}
    <div class="card text-center" style="width: 300px;">
      <img src="{{picture_url}}" class="card-img-top cardImage" alt="{{name}}" />
      <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">Dentinho:
          {{#each dentinho}} {{name}}, {{/each}}</p>
        <a href="/bars/{{_id}}" class="btn btn-primary centered">See details</a>
      </div>
    </div>
  {{/each}}
</div>
</div>